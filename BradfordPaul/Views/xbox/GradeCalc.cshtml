@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeModel;

<h3>IS 413 Grade Calculator</h3>
<form method="post">
    <label>Assignments:</label>
    <input id="assign" asp-for="Assignments" placeholder="Out of 55%" /><br /><br />
    <label>Group Project:</label>
    <input id="group" asp-for="Group_Projects" placeholder="Out of 5%" /><br /><br />
    <label>Quizzes:</label>
    <input id="quiz" asp-for="Quizzes" placeholder="Out of 10%" /><br /><br />
    <label>Exams:</label>
    <input id="exam" asp-for="Exams" placeholder="Out of 20%" /><br /><br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex" placeholder="Out of 10%" /><br /><br />
    <input id="btnSend" type="submit" value="Calculate Grade" />

    <div asp-validation-summary="All"></div>

</form>
<br />

<p id="output"></p>

<script src="~/js/grade.js"></script>